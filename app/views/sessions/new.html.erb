<h1>Please sign in</h1>

<% flash.each do |key, value| %>
	<div><%= value %></div>
<% end %>

<%= form_for(:session, url: sign_in_path) do |f| %>

	<%= f.label :user, "E-mail or username:" %>
	<%= f.text_field :user %>
	
	<%= f.label :password, "Password:" %>
	<%= f.password_field :password %>
	
	<%= f.submit "Go!" %>

<% end %>